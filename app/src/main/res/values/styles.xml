<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="CustomBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/bg_top_round_corner</item>
  </style>

  <style name="ExtraBoldTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_extra_bold</item>
  </style>

  <style name="BoldTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_bold</item>
  </style>

  <style name="RegularTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_regular</item>
  </style>
  <style name="NewsTextView" parent="RegularTextView">
    <item name="lineHeight">@dimen/_15sdp</item>
    <item name="android:justificationMode">inter_word</item>
  </style>

  <style name="MediumTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_medium</item>
  </style>

  <style name="LightTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_light</item>
  </style>

  <style name="ThinTextView" parent="Widget.MaterialComponents.TextView">
    <item name="fontFamily">@font/iran_yekan_mobile_thin</item>
  </style>

</resources>